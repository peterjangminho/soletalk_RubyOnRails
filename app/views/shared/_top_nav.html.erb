<header class="top-nav-shell glass-nav">
  <nav class="top-nav page-shell" aria-label="Primary">
    <%= link_to root_path, class: "brand-link brand-logo-link", "aria-label": t("navigation.brand") do %>
      <img src="/brand/soletalk-logo-v2.png" alt="<%= t("navigation.brand") %>" class="brand-logo-image">
    <% end %>

    <% if current_user %>
      <div class="top-nav-links">
        <%= link_to sessions_path, class: "nav-icon-link" do %>
          <%= render "shared/icon", name: "file-text", size: 18 %>
          <span><%= t("navigation.sessions") %></span>
        <% end %>
        <%= link_to insights_path, class: "nav-icon-link" do %>
          <%= render "shared/icon", name: "link", size: 18 %>
          <span><%= t("navigation.insights") %></span>
        <% end %>
        <%= link_to setting_path, class: "nav-icon-link" do %>
          <%= render "shared/icon", name: "cog", size: 18 %>
          <span><%= t("navigation.settings") %></span>
        <% end %>
      </div>
    <% else %>
      <div class="top-nav-links">
        <%= link_to root_path(anchor: "sign-in"), class: "nav-icon-link" do %>
          <%= render "shared/icon", name: "log-out", size: 18 %>
          <span><%= t("navigation.sign_in") %></span>
        <% end %>
      </div>
    <% end %>
  </nav>
</header>
